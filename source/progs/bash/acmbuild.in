####################
## Init variables ##
####################
script_exit_code=0
osname=$(uname -s)			# Get system name for OS differentiation
version="1.1.1"				# set version variable
outputprefix="acmbuild: "
packageversion=@pkgversion@		# Version of the complete package

debug=""
dist=FALSE
make=FALSE
basedir="."

###############
## Functions ##
###############

# Output $1 to stdout or stderr depending on $2.
output()
{
	if [ $2 = 0 ]
	then
		echo "$outputprefix$1"
	else
		echo "$outputprefix$1" 1>&2
	fi
}

# Standard function to test command error ($1 is $?) and exit if non-zero
std_cmd_err_handler()
{
	if [ $1 != 0 ]
	then
		script_exit_code=$1
		script_exit
	fi
}

# Standard function to cleanup and return exit code
script_exit()
{
	exit $script_exit_code
}

# Standard trap exit function
trap_exit()
{
script_exit_code=67
output "Script terminating due to trap received." 1
script_exit
}

# Setup trap
trap trap_exit SIGHUP SIGINT SIGTERM

##########
## Main ##
##########
# Process command line arguments with GNU getopt.
GETOPTTEMP=`getopt -o dDhmV --long debug,dist,help,make,version -n "$0" -- "$@"`
std_cmd_err_handler $?

eval set -- "$GETOPTTEMP"
std_cmd_err_handler $?

while true
do
	case "$1" in
	-d|--debug)
		debug="--enable-debug=yes"
		shift
		;;
	-D|--dist)
		if [ $make = TRUE ]
		then
			script_exit_code=64
			output "Options D and m are mutually exclusive." 1 FALSE
			script_exit
		fi
		dist=TRUE
		shift
		;;
	-h|--help)
		echo "Usage is $0 [options]"
		echo "	-d or --debug build with appropriate debug flags"
		echo "	-D or --dist perform a make dist"
		echo "	-h or --help displays usage information"
		echo "	-m or --make compile and link - plain make"
		echo "	-V or --version displays version information"
		shift
		script_exit_code=0
		script_exit
		;;
	-m|--make)
		if [ $dist = TRUE ]
		then
			script_exit_code=64
			output "Options D and m are mutually exclusive." 1 FALSE
			script_exit
		fi
		make=TRUE
		shift
		;;
	-V|--version)
		echo "$0 Script version "$version
		echo "$0 Package version "$packageversion
		shift
		script_exit_code=0
		script_exit
		;;
	--)	shift
		break
		;;
	*)	script_exit_code=1
		output "Internal error." 1
		script_exit
		;;
	esac
done

# Script can accept 1 other argument, the base directory.
if [ $# -gt 1 ]
then
	script_exit_code=64
	output "Invalid argument." 1
	script_exit
fi

if [ $# -eq 1 ]
then
	basedir=$1
fi

# One option has to be selected.
if [ $dist = FALSE -a $make = FALSE ]
then
	script_exit_code=64
	output "Either D or m must be set." 1 FALSE
	script_exit
fi

autoreconf -if $basedir
status=$?
output "autoreconf -if "$basedir" completed with exit status: "$status $status
std_cmd_err_handler $status

$basedir/configure --enable-silent-rules=yes $debug
status=$?
output $basedir"/configure --enable-silent-rules=yes "$debug" completed with \
exit status: "$status $status
std_cmd_err_handler $status

if [ $dist = TRUE ]
then
	make dist clean --quiet
	status=$?
	output "make dist clean completed with exit status: "$status $status
	std_cmd_err_handler $status

	make distclean --quiet
	status=$?
	output "make distclean completed with exit status: "$status $status
	std_cmd_err_handler $status
else
	make --quiet
	status=$?
	output "make completed with exit status: "$status $status
	std_cmd_err_handler $status
fi

script_exit_code=0
script_exit
